@import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600i,700')
colorDeBorde = #e2e2e2

html
  margin 0
  padding 0
  height 100%
  body
    margin 0
    padding 0
    font-size 16px
    font-family 'Source Sans Pro', sans-serif
    height 100%
    overflow hidden

.cursos-obt
  width 40%
  display flex
  flex-direction column
  overflow-y auto
  .cursos-datos
    margin 1rem 0rem
    border 1px solid colorDeBorde
    border-bottom 0px
    border-radius 5px
    .imagen-curso
      width 100%
      height 300px
      border-radius 0px 0px 5px 5px
    .cabecera-curso
      display flex
      justify-content space-around
      padding 1rem
      flex-direction row
      font-size 1rem

.cabecera
  display flex
  position relative
  justify-content center
  border-bottom 1px solid colorDeBorde
  a
    position absolute
    left 0
    padding 1.35rem 1rem 1.35rem 0rem
    text-decoration none
    background black
    color white
    font-weight 700
    font-size 1rem
  label
    padding 1rem 0rem
    font-weight 700
    color #CCC
    font-size 1.5rem

.contenido
  width 100%
  height 90%
  display flex
  flex-direction row
  justify-content space-around
  overflow-y hidden
  .formulario
    width 50%
    display flex
    flex-direction column
    input
      margin .5rem 0rem
      padding .5rem
      border 1px solid colorDeBorde
      font-size 1.1rem
    .submit
      background white
      margin .5rem 0rem
      padding .5rem
      color black
      cursor pointer
      &:hover
        color white
        background colorDeBorde
    textarea
      height 200px
      border 1px solid colorDeBorde
      resize none
      font-size 1.1rem
